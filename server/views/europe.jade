extends layout
block main
  div.full
    leaflet(zoom="4", max-zoom="5", min-zoom="2", lat="46.55886030311719", lng="8.4375", code="code", country-name="countryName", country-name-size="countryNameSize", map="europe")

  div.flag(ng-show="code", ng-cloak)
    img(ng-src=settings.urls.base.url + "img/flags/96x64.3/{{code}}.png")
    h3(ng-class="countryNameSize") {{countryName}}
