extends layout
block main
  div.full
    leaflet(max-zoom="5", min-zoom="2", lat="40.094882122321145", lng="-3.8232421874999996", country-code="countryCode", country-name="countryName", country-name-size="countryNameSize", map="world")

  div.flag(ng-show="countryCode", ng-cloak)
    flag(country-code="countryCode")
    h3(ng-class="countryNameSize") {{countryName}}
